<%= f.fields_for 'customer_interests[]', interest, index: index, cip: cip do |ff| %>
  <%= markup(:li) do |m|
    m << ff.check_box(:checked, { checked: !interest.id.nil? })
    m << ff.label(:checked, cip.title)
    m << ff.hidden_field(:deletable, { value: cip.deletable, class: 'deletable_flag' })
    m << ff.hidden_field(:interest_id, { value: cip.interest_id })
  end %>
<% end %>